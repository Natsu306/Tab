<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<StackPane prefHeight="500.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.preguntas.Preguntas">
   <children>
      <BorderPane prefHeight="500.0" prefWidth="500.0">
         <bottom>
            <HBox prefHeight="100.0" prefWidth="200.0" BorderPane.alignment="CENTER">
               <children>
                  <HBox prefHeight="100.0" prefWidth="250.0">
                     <children>
                        <Button mnemonicParsing="false" onAction="#boton7" prefHeight="64.0" prefWidth="64.0" styleClass="jfx-buttonregreso" stylesheets="@../estilos/estilos.css">
                           <HBox.margin>
                              <Insets left="10.0" top="20.0" />
                           </HBox.margin>
                        </Button>
                        <Label prefHeight="64.0" prefWidth="108.0" text="Regresar">
                           <HBox.margin>
                              <Insets left="20.0" top="20.0" />
                           </HBox.margin>
                           <font>
                              <Font name="Verdana" size="23.0" />
                           </font>
                        </Label>
                     </children>
                  </HBox>
                  <HBox prefHeight="100.0" prefWidth="250.0" />
               </children>
            </HBox>
         </bottom>
         <left>
            <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
               <children>
                  <VBox prefHeight="200.0" prefWidth="100.0" />
               </children>
            </VBox>
         </left>
         <top>
            <HBox prefHeight="100.0" prefWidth="200.0" BorderPane.alignment="CENTER">
               <children>
                  <Label text="¿Que es coronavirus?">
                     <font>
                        <Font name="Verdana" size="46.0" />
                     </font>
                  </Label>
               </children>
            </HBox>
         </top>
         <center>
            <HBox prefHeight="100.0" prefWidth="200.0" BorderPane.alignment="CENTER">
               <children>
                  <HBox prefHeight="300.0" prefWidth="405.0">
                     <children>
                        <RadioButton mnemonicParsing="false" onAction="#radio1" prefHeight="38.0" prefWidth="152.0" text="Una bacteria infecciosa">
                           <HBox.margin>
                              <Insets left="-30.0" top="80.0" />
                           </HBox.margin>
                        </RadioButton>
                        <RadioButton mnemonicParsing="false" onAction="#radio2" prefHeight="40.0" prefWidth="137.0" text="Una infestación viral">
                           <HBox.margin>
                              <Insets left="50.0" top="80.0" />
                           </HBox.margin>
                        </RadioButton>
                     </children>
                  </HBox>
               </children>
            </HBox>
         </center>
      </BorderPane>
      <ImageView fx:id="im1" fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" visible="false">
         <image>
            <Image url="@../img/comprobar.png" />
         </image>
      </ImageView>
      <ImageView fx:id="im2" fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" visible="false">
         <image>
            <Image url="@../img/incorrecto.png" />
         </image>
      </ImageView>
   </children>
</StackPane>
